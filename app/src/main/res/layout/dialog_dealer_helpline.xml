<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_feedback"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/feedback_alert_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Contact Us"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:fontFamily="@font/cera_gr_bold"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/tv_toll_free_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:gravity="center"
        android:text="Toll Free Number: 1800 270 1249"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/cera_gr_medium"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/feedback_alert_title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:padding="2dp"
        android:fontFamily="@font/cera_gr_medium"
        android:text="Let's Talk About a Project"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible" />

    <EditText
            android:id="@+id/et_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginTop="3sp"
            android:background="@drawable/feedback_box"
            android:gravity="left|top"
            android:hint="Subject"
            android:lines="1"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorHint="#C4C4C4"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:textSize="14sp"
            android:windowSoftInputMode="adjustResize"/>

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="3sp"
        android:background="@drawable/feedback_box"
        android:gravity="left|top"
        android:hint="Please share your feedback/queries on FlicBuzz. We look forward to hear from you!"
        android:lines="5"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColorHint="#C4C4C4"
        android:textCursorDrawable="@drawable/edt_cursor"
        android:textSize="14sp"
        android:windowSoftInputMode="adjustResize"/>

    <CheckBox
        android:id="@+id/cb_query_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="My query is related to Auctions" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginBottom="2dp"
        android:gravity="right|center_vertical"
        android:paddingRight="5sp">



            <TextView
                android:id="@+id/btn_feedback_cancel"
                android:layout_width="wrap_content"
                android:layout_height="38sp"
                android:gravity="center"
                android:padding="10sp"
                android:layout_gravity="center_vertical|center"
                android:background="#ffffff"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary" />




            <TextView
                android:id="@+id/btn_feedback_send"
                android:layout_width="wrap_content"
                android:layout_height="38sp"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|center"
                android:text="@string/submit"
                android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
