<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="5dp">

    <LinearLayout
            android:id="@+id/user_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.aniapps.flicbuzz.utils.CircleImageView
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_centerVertical="true"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/about_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/light"/>

            <TextView
                    android:id="@+id/menu_name"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/cera_gr_bold"
                    android:text="Name: "
                    android:textColor="@color/txt_green"
                    android:textSize="25dp"/>

            <TextView
                    android:id="@+id/plan"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/cera_gr_regular"
                    android:text="No Plan"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/txt_green"
                    android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"/>

    <LinearLayout
            android:id="@+id/casecreate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <Button
                android:layout_width="5dp"
                android:id="@+id/creaecase_btn"
                android:layout_height="match_parent"
                android:background="@color/menuline"
                android:fontFamily="@font/cera_gr_regular"/>

        <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu_favourite_icon"/>

        <TextView
                android:id="@+id/newCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_gr_regular"
                android:onClick="onNavClick"
                android:layout_marginLeft="10dp"
                android:text="My Favourites"
                android:textColor="@color/txt_green"
                android:textSize="@dimen/nav_txt_size"/>

    </LinearLayout>

    <View
            android:id="@+id/casecreate_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"/>

    <LinearLayout
            android:id="@+id/assignedcases_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

        <Button
                android:layout_width="5dp"
                android:id="@+id/assignedcase_btn"
                android:layout_height="match_parent"
                android:background="@color/menuline"
                android:fontFamily="@font/cera_gr_regular"/>

        <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu_favourite_icon"/>

        <TextView
                android:id="@+id/assignedCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_gr_regular"
                android:onClick="onNavClick"
                android:text="My Packages"
                android:layout_marginLeft="10dp"
                android:textColor="@color/txt_green"
                android:textSize="@dimen/nav_txt_size"/>

    </LinearLayout>


    <View
            android:id="@+id/assignedcases_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"/>

    <LinearLayout
            android:id="@+id/pendingCases_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

        <Button
                android:layout_width="5dp"
                android:id="@+id/pendingcase_btn"
                android:layout_height="match_parent"
                android:background="@color/menuline"
                android:fontFamily="@font/cera_gr_regular"/>

        <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu_setting_icon"/>

        <TextView
                android:id="@+id/pendingCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_gr_regular"
                android:onClick="onNavClick"
                android:layout_marginLeft="10dp"
                android:text="My Settings"
                android:textColor="@color/txt_green"
                android:textSize="@dimen/nav_txt_size"/>

    </LinearLayout>

    <View
            android:id="@+id/pendingcases_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"
            android:visibility="visible"/>

    <LinearLayout
            android:id="@+id/submittedCases_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

        <Button
                android:layout_width="5dp"
                android:id="@+id/submittedcase_btn"
                android:layout_height="match_parent"
                android:background="@color/menuline"
                android:fontFamily="@font/cera_gr_regular"/>

        <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu_share_icon"/>

        <TextView
                android:id="@+id/submittedCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_gr_regular"
                android:onClick="onNavClick"
                android:layout_marginLeft="10dp"
                android:text="Share the App"
                android:textColor="@color/txt_green"
                android:textSize="@dimen/nav_txt_size"/>

    </LinearLayout>

    <View
            android:id="@+id/submittedcases_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"
            android:visibility="visible"/>

    <LinearLayout
            android:id="@+id/userDetails_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

        <Button
                android:id="@+id/userdetails_btn"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/menuline"
                android:fontFamily="@font/cera_gr_regular"/>

        <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu_whatapp_icon"/>

        <TextView
                android:id="@+id/userDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cera_gr_regular"
                android:onClick="onNavClick"
                android:text="About FlicBuzz"
                android:layout_marginLeft="10dp"
                android:textColor="@color/txt_green"
                android:textSize="@dimen/nav_txt_size"/>

    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menuline"/>
</LinearLayout>