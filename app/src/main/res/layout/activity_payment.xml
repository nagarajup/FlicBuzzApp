<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@mipmap/get_access_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical" android:layout_height="wrap_content">
        <TextView android:textSize="35.0sp"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="30dp"
                  android:textColor="@color/payment_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Get Full"
                  android:fontFamily="@font/cera_gr_bold"/>
        <TextView android:textSize="15.0sp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="30dp"
                  android:textColor="@color/payment_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/fullaccess"
                  android:fontFamily="@font/cera_gr_bold"/>
        <Button android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/full_access"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/full_access_green"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:gravity="right"
                  android:layout_marginRight="30dp"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="30dp"
                  android:orientation="vertical" android:layout_height="wrap_content">
        <TextView android:textSize="35.0sp"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="30dp"
                  android:textColor="@color/payment_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Get Limited"
                  android:fontFamily="@font/cera_gr_bold"/>
        <TextView android:textSize="15.0sp"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/full"
                  android:layout_marginLeft="30dp"
                  android:textColor="@color/payment_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/limitedacces"
                  android:fontFamily="@font/cera_gr_bold"/>
        <Button android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/limited_access"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/full_access_white"/>
    </LinearLayout>
</RelativeLayout>