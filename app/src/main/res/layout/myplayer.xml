<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:background="@android:color/black"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <!--<!-<android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

    <FrameLayout
            android:id="@+id/playerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

        <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:use_controller="true"
                android:gravity="center"
                app:auto_show="false"
                app:player_layout_id="@layout/exo_simple_player_view"
                app:controller_layout_id="@layout/custom_playback_control"/>

        <!-- <com.google.android.exoplayer2.ui.PlayerView
                 android:id="@+id/video_view"
                 android:layout_width="match_parent"
                 app:repeat_toggle_modes="none"
                 app:show_buffering="true"
                 app:use_controller="true"
                 app:show_timeout="5000"
                 android:layout_height="match_parent"
                 app:player_layout_id="@layout/custom_playback_control"/>-->
        <!--app:controller_layout_id="@layout/custom_playback_control"/>-->
        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="gone"/>


    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerview"
            android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">


                <TextView
                        android:id="@+id/tv_play_title"
                        android:layout_width="wrap_content"
                        android:layout_margin="5sp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3sp"
                        android:layout_height="wrap_content"
                        android:text="hello"
                        android:maxLines="2"/>

                <ImageView
                        android:id="@+id/img_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="8sp"
                        android:src="@mipmap/fav_icon_video"/>

                <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="8sp"
                        android:src="@mipmap/share_icon_video"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_play_description"
                    android:layout_width="match_parent"
                    android:layout_margin="5sp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

        <!--      </android.support.constraint.ConstraintLayout>-->