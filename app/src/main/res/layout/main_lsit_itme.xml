<?xml version="1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
              android:layout_marginRight="20dp"
              android:layout_marginBottom="10dp">
    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="?android:selectableItemBackground"
                android:orientation="vertical">

            <RelativeLayout android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="0dp">
                <ImageView android:id="@+id/iv_videoImage"
                           android:padding="0dp"
                           android:layout_width="wrap_content"
                           android:layout_height="120dp"
                           android:layout_marginTop="15dp"
                           android:src="@drawable/testing"
                           android:scaleType="fitXY"
                           android:layout_alignParentTop="true"
                           android:layout_centerHorizontal="true"/>
                <ImageView android:id="@+id/iv_playVideo"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@mipmap/play_btn"
                           android:layout_centerHorizontal="true"
                           android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:textSize="14sp"
                      android:textStyle="bold"
                      android:textColor="#ff53ba00"
                      android:ellipsize="end"
                      android:id="@+id/tv_title"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="hello"
                      android:maxLines="1"
                      android:lines="1"/>
            <TextView android:textSize="12sp"
                      android:textColor="#ffa5a5a5"
                      android:ellipsize="end"
                      android:id="@+id/tv_desc"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:text="description about sample video...."
                      android:maxLines="2" android:lines="2"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>